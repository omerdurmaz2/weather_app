<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewRobotoBoldStyle">
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextViewRobotoMediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextViewRobotoRegularStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextViewRobotoRegularStyleOne" parent="TextViewRobotoRegularStyle">
        <item name="android:textSize">@dimen/dg_text_size_12</item>
    </style>
    <style name="TextViewRobotoMediumStyleOne" parent="TextViewRobotoMediumStyle">
        <item name="android:textSize">@dimen/dg_text_size_12</item>
    </style>

    <style name="TextViewRobotoMediumStyleTwo" parent="TextViewRobotoMediumStyle">
        <item name="android:textSize">@dimen/dg_text_size_14</item>
    </style>

    <style name="TextViewRobotoBoldStyleThree" parent="TextViewRobotoBoldStyle">
        <item name="android:textSize">@dimen/dg_text_size_16</item>
    </style>

    <style name="TextViewRobotoBoldHeadingStyle" parent="TextViewRobotoBoldStyle">
        <item name="android:textSize">@dimen/dg_text_size_20</item>
    </style>

    <style name="TextViewRobotoBoldHeadingStyleFive" parent="TextViewRobotoBoldStyle">
        <item name="android:textSize">@dimen/dg_text_size_170</item>
    </style>

    <style name="TextViewRobotoRegularStyleThree" parent="TextViewRobotoRegularStyle">
        <item name="android:textSize">@dimen/dg_text_size_16</item>
    </style>


    <style name="ProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:minWidth">200dp</item>
    </style>

</resources>